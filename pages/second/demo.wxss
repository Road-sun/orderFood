/* pages/second/demo.wxss */

page {
  padding: 0;
  margin: 0;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.swiper-main {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 0;
  flex-grow: 9;
}

.option-main {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.position {
  display: flex;
  box-sizing: border-box;
  width: 100%;
  height: 0;
  flex-grow: 1;
  background: #03A9F4;
  line-height: 100rpx;
  color: white;
  padding-left: 50rpx;
  align-items: center;
}

.position_a {
  display: inline-block;
  border-radius: 50rpx;
  background: rgba(25, 25, 25, 0.3);
  height: 55rpx;
  width: 42%;
  font-size: 13px;
  line-height:50rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  padding: 0 5rpx ;
}

.swiper {
  height: 0;
  flex-grow: 3.89;
  width: 100%;
}

.swiper image {
  height: 100%;
  width: 100%;
}

.order {
  display: flex;
  width: 100%;
  height: 0;
  flex-grow: 5;
  flex-direction: column;
}

.order-main{
  display: flex;
  width: 100%;
}

.order-box{
  display: block;
  height: 360rpx;
  width: 360rpx;
  background:rgba(239, 239, 239, 0.65);
  margin: 15rpx 0;
  box-sizing: border-box;
  padding: 30rpx;
}

.box-left{
  margin-left: 15rpx;
  margin-right: 5rpx;
}

.box-right{
  margin-left: 5rpx;
  margin-right: 15rpx;
}

.box-name{
  color: red;
}

.lijiqg{
  font-size: 12px;
  color: #a4a4a4;
}

.box-img{
  display: block;
  float: right;
  width: 200rpx;
  height: 180rpx;
  background: rebeccapurple;
  margin-top:50rpx;
  border-radius: 5rpx; 
  justify-content: center;
  align-items: center;
}

.order_a {
  display: inline-block;
  width: 97%;
  height: 80rpx;
  line-height: 80rpx;
  background: #00BCD4;
  text-align: center;
  color: white;
  font-size: 18px;
  margin: 0 auto;
  margin-bottom: 30rpx;
}


.list-box{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
}

.list-cc{
  display: inline-block;
  color: #a4a4a4;
  font-size: 13px;
  padding-bottom: 70rpx;
}





.meau {
  display: flex;
  height: 0;
  flex-grow: 1;
  width: 100%;
  border-top: 0.5px #ddd solid;
}

.meau_a {
  display: flex;
  flex-direction: column;
  width: 0;
  flex-grow: 1;
  text-align: center;
  justify-content: center;
  align-content: center;
  align-items: center;
  line-height: 130rpx;
}

.meau_a_font {
  display: inline-block;
  width: 120rpx;
  height: 70rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 11px;
  color: #a4a4a4;
}

.s-icon {
  margin-top: 8rpx;
  font-size: 40px;
}




.per-main{
  display:flex;
  width: 100%;
  height: 100%;
  background-color: rgba(239, 239, 239, 0.65); 
  flex-direction: column;
}

.per-info{
  display: flex;
  width: 100%;
  height: 20%;
  background-color: #03A9F4;
}

.per-img-box{
  display: block;
  width: 0;
  height: 100%;
  flex-grow: 3;
  padding: 25rpx 40rpx;
  box-sizing: border-box;
}

.per-img{
  display: block;
  box-sizing: border-box; 
  width: 70px;
  height: 70px;
  border-radius: 50%;
  background: white;
}

.per-mess{
  display: flex;
  flex-direction: column;
  width: 0;
  height: 100%;
  flex-grow: 7;
  color: white;
  justify-content: center;

}

.per-name{
  display: inline-block;
  font-size: 20px;
  width: 100%;
}

.list-all{
  display: flex;
  width: 100%;
  flex-direction: column;
}

.list-view{
  display: block;
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  background: white;
  line-height: 100rpx;
  padding: 0 40rpx;
  border-bottom: 2rpx solid #ddd;
}

.list-font{
  float: right;
  font-weight: 700;
  color: #a4a4a4;
}