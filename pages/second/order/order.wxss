/* pages/second/order/order.wxss */
page{
  padding: 0;
  margin: 0;
  height: 100%;
  display: flex;
  flex-direction: column;
}



.scroll-floor{
  display: flex;
  flex-grow: 0.8; 
  height: 0;
  white-space: nowrap;
  background: #03A9F4;
}

.scroll-option{
  display:inline-block;
  width: 50%;
  height: 96%;
  text-align: center;
  line-height: 130rpx;
  color: rgba(255, 241, 246, 0.64);
}

.scroll-option-tap{
  color: white;
  border-bottom:7rpx white solid; 
}

.scroll-shop-floor{
    display: flex;
    white-space: nowrap;
    height:0;
    flex-grow: 8;  
}



.scroll-shop{
  display: inline-block;
  height: 100%; 
  width: 100%;
  background-color: rgba(239, 239, 239, 0.65);
}


.reco-food{
  display: flex;
  flex-direction: column;
  width: 100%;
  background: white;
  height: 420rpx;
}

.head-food-line{
  display: block;
  width: 100%;
  padding-left:50rpx;
  color: #8d8d8d;
  font-size: 13px;
  height: 70rpx; 
  line-height: 90rpx;
  padding-bottom: 5rpx; 
}

.head-food-content{
  display: flex;
  height: 350rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 0  10rpx;
}

.head-food{
  display: flex;
  flex-direction: column;
  flex-grow: 3.33;
  width: 0;
  height: 100%;
  box-sizing: border-box;
  padding: 0 18rpx;
}

.head-food-img{
  display: block;
  width: 210rpx;
  height: 210rpx;
  background:red; 
}

.head-food-name{
  display: inline-block;
  width: 100%;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  font-size: 14px;
  padding-top: 5rpx;
}

.head-food-com{
  display: inline-block;
  width: 100%;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  font-size: 10px;
  color: #8d8d8d;
}

.head-food-price{
  display: inline-block;
  width: 100%;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  font-size: 13px;
  color: red;
}

.shop-box{
  display: block;
  margin-top: 15rpx;
  background: white;
}

.shop{
  display: flex;
  width: 100%;
  height: 250rpx;
  align-items: center; 
  border-bottom: 0.5px solid #DDDDDD;
  background: white;
}

.cilck_bg{
  background: #f0f5f5;
}

.shop-img-box{
  display: flex;
  width: 0;
  height: 100%;
  flex-grow: 1.2;
  justify-content: center;
  align-items: center;
}

.shop_img{
  display: block;
  box-sizing: border-box; 
  width: 80px;
  height: 80px;
  border: #DDDDDD 0.1rpx solid;
  border-radius: 5rpx;
  background: white;
}

.shop-card{
  display: flex;
  flex-direction:column; 
  width: 0;
  height: 100%;
  flex-grow: 2;
}
.shop-name{
  display: inline-block;
  font-size: 18px;
  text-align: center;
  padding-top: 30rpx;
}

.shop-star{
  display: inline-block;
  color: #FFC107;
  font-size: 15px;
}

.shop-address{
  display: inline-block;
  font-size: 13px;
  color: #969696;
}

.shop-price{
  display: flex;
  font-size: 12px;
  color: #969696;
  padding-top: 8rpx;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

